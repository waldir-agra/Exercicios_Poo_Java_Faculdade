package lista1;

import java.util.Scanner;

/**Escreva uma classe que receba diversos números(inteiros e/ou positivos) do usuário e o programa
deve ser interrompido ao ser informado o número zero. Com os números recebidos, determine o
maior e o menor valor deste conjunto de números **/

public class q16 {
	public static void main(String[]args) {
		Scanner sc = new Scanner(System.in) ;
		
	int num = 0;
	
	int valor[] = new int[4];
	int maior= valor[0], menor = Integer.MAX_VALUE;
	  
	
	for(int i = 0; i < valor.length; i++){
		System.out.print("Digite o " +(i+1)+"º valor: ");
		valor[i] = sc.nextInt();
		if(valor[i]==0) {
			break;
		}else
		if(valor[i] > maior){ 
			maior = valor[i];
			}
		}
	for (int j = 0; j < valor.length; j++) {
		if(valor[j] < menor){
			menor = valor[j];
		
		
		}
	}
	System.out.println("Maior valor = "+ maior);
	System.out.println("Menor valor = "+ menor);
	
		}
	}
	

	
	
	
	



		      
		        	
		  			
		  			
		  		
				 
	
	
				
	


		       




		         
	
		         
