package lista1;

import java.util.Scanner;

/**Escrever uma classe em que receba três valores (a, b e c) e podem ser os comprimentos dos lados de
um triângulo. Se for, verifique se o triângulo é um equilátero, isósceles ou escaleno. Caso não seja,
também informar que compõe um triângulo.
a. Um triângulo é uma figura geométrica de três lados onde cada lado é menor que a soma dos
outros dois;
b. Triângulo equilátero é quando tem os três lados iguais;
c. Triângulo isósceles é quando dois dos três lados são iguais;
d. Triângulo escaleno é quando nenhum lado é igual; **/
public class q14 {
 public static void main(String[]args) {
	 Scanner sc = new Scanner(System.in);
	 
	 int a,b,c ;
	 
	 System.out.println("Digite o valor (A): ");
	 a = sc.nextInt();
	 System.out.println("Digite o valor (B): ");
	 b = sc.nextInt();
	 System.out.println("Digite o valor (C): ");
	 c = sc.nextInt();
	 
	 if (a == b && a==c ) {
		 System.out.println("De acordo com os valores , é um triângulo equilatero !"  );
	 }else
		 if (a==b || a==c || b == c) {
			 System.out.println("De acordo com os valores , é um triângulo isósceles !"  );
		 }else
			  {
				 System.out.println("De acordo com os valores , é um triângulo escaleno !"  );
			 }
	 
	 System.out.println("Os valores de (A)é : "  +a);
	 System.out.println("Os valores de (B)é : "  +b);
	 System.out.println("Os valores de (C)é : "  +c);
 }
}
